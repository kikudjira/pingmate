<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Allow JIT compilation, needed for certain JavaScript operations -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Allow unsigned executable memory, required for Electron applications -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>

  <!-- Enable networking capabilities for the app -->
  <key>com.apple.security.network.client</key>
  <true/>
  <key>com.apple.security.network.server</key>
  <true/>

  <!-- Allow the application to access temporary directories for storing settings and assets -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Allow read and write access to the app's own container (e.g., userData directory) -->
  <key>com.apple.security.files.app-data</key>
  <true/>

  <!-- Disable strict library validation, needed for dynamic libraries used in Electron -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>
</dict>
</plist>